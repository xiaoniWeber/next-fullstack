{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:storybook/recommended"
  ],
  "globals": {
    "React": "readonly"
  },
    // 新加入
    "overrides": [
      {
        "files": ["*.stories.@(ts|tsx|js|jsx|mjs|cjs)"],
        "rules": {
          // example of overriding a rule
          "storybook/hierarchy-separator": "error"
        }
      }
    ],
  
  "rules": {
    "no-unused-vars": [
      1,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/no-unescaped-entities": 0
  }
}
